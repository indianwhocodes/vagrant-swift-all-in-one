[DEFAULT]
disable_fallocate = true
workers = 1
log_facility = LOG_LOCAL2
# NOTE: servers_per_port necessary for replicator/reconstructor so must go here
servers_per_port = <%= @servers_per_port %>

[pipeline:main]
pipeline = backend_ratelimit recon object-server

[app:object-server]
use = egg:swift#object
<% if ! @replication_server -%>
replication_server = false
<% end -%>

[filter:recon]
use = egg:swift#recon

[filter:backend_ratelimit]
use = egg:swift#backend_ratelimit
requests_per_device_per_second = 10.0
